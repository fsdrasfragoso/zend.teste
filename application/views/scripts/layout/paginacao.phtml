		var ir = $(this).attr('rel');
		$(".pg_atual").val(ir);
		$("form").submit();
	});
	$("#count").change(function(){
		var ir = $(this).find("option:selected").val();
		$(".num_pgs").val(ir);
		$("form").submit();
	});
	$("#bt_pesquisa").click(function(){
		$(".num_pgs").val("");
		$(".pg_atual").val("");
	});
});
