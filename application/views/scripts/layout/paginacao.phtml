<script>
$(window).load(function(){
	$("form").append('<input type="hidden" name="pg_atual" class="pg_atual" value="<?=$this->pg_atual?>" /><input type="hidden" name="num_pgs" class="num_pgs" value="<?=$this->num_pgs?>" />');
